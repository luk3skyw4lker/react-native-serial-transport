{
  "name": "react-native-serial-transport",
  "version": "0.1.0",
  "description": "USB Serial Port support for React Native for Android",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "@types/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "@types",
    "plugin/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!android/build",
    "!android/.gradle",
    "!android/.idea"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "build:plugin": "tsc --project plugin/tsconfig.json",
    "prepare": "bob build && npm run build:plugin",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn example pods"
  },
  "keywords": [
    "react-native",
    "android",
    "serial",
    "usb",
    "esp32",
    "esp8266",
    "esptool",
    "flash",
    "uart"
  ],
  "repository": "https://github.com/yourorg/react-native-serialport",
  "author": "Your Name <your@email.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourorg/react-native-serialport/issues"
  },
  "homepage": "https://github.com/yourorg/react-native-serialport#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@expo/config-plugins": "^54.0.2",
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/react": "^18.2.44",
    "@types/react-native": "^0.72.8",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-builder-bob": "^0.23.2",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
